<Page
    x:Class="SpacePortal.Views.RequestDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Page.Resources>
		<Style x:Key="Title" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
			<Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
		</Style>

		<Style x:Key="Subtitle" TargetType="TextBlock" BasedOn="{StaticResource BodyStrongTextBlockStyle}" >
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

		<Style x:Key="Content" TargetType="TextBlock" BasedOn="{StaticResource BodyStrongTextBlockStyle}" >
			<Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
		</Style>

		<Style x:Key="Card" TargetType="Grid">
			<Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
			<Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="20"/>
			<Setter Property="Padding" Value="16"/>
		</Style>

		<Style x:Key="TextBoxStyle" TargetType="TextBox">
			<Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Height" Value="32"/>
		</Style>

        <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
	</Page.Resources>
	<Grid Margin="36,36,36,36">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Background="Transparent" BorderThickness="0" Click="GoBackButton_Click" VerticalAlignment="Center">
				<FontIcon Glyph="&#xE96F;" VerticalAlignment="Center" Margin="0,4,4,4"/>
			</Button>
			<TextBlock Grid.Column="1" Style="{ThemeResource Title}" x:Uid="RequestDetailPage_RequestDetailTitle" HorizontalAlignment="Center"
					   VerticalAlignment="Center"/>
		</Grid>
		<Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="28" ColumnSpacing="28">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid Name="RequestDetailArea" Style="{ThemeResource Card}" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="100"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Style="{StaticResource Subtitle}" Text="{x:Bind ViewModel.Request.RequestName}" TextAlignment="Left"/>
                <Line Grid.Row="1" X1="0" Y1="20" X2="{Binding ActualWidth, ElementName=RequestDetailArea}" Y2="20" 
					  Stroke="{ThemeResource CardStrokeColorDefaultBrush}" StrokeThickness="1"/>
                <TextBlock Grid.Row="2" Style="{StaticResource Content}" Text="{x:Bind ViewModel.Request.SubmittedAt}" TextAlignment="Right" Margin="0,16,0,0"/>
                <TextBlock Grid.Row="3" Style="{StaticResource Content}" Text="{x:Bind ViewModel.FormattedRequestContent, Mode=TwoWay}" TextAlignment="Left" Margin="0,24,0,0"/>
            </Grid>
            <Grid Name="AnswerArea" Style="{ThemeResource Card}" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="100"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Style="{StaticResource Subtitle}" x:Uid="RequestDetailPage_AnswerRequestTitle" TextAlignment="Left"/>
                <Line Grid.Row="1" X1="0" Y1="20" X2="{Binding ActualWidth, ElementName=RequestDetailArea}" Y2="20" 
				  Stroke="{ThemeResource CardStrokeColorDefaultBrush}" StrokeThickness="1"/>
            </Grid>
		</Grid>
        <Grid Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0,0,28,0">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource ButtonStyle}" x:Uid="RequestDetailPage_CancelledRequestButton" Click="CancelledRequestButton_Click"/>
                <Button Style="{StaticResource ButtonStyle}" x:Uid="RequestDetailPage_ResendRequestButton" Click="ResendRequestButton_Click" Margin="16,0,0,0"/>
            </StackPanel>
        </Grid>
	</Grid>
</Page>
