<Page
    x:Class="SpacePortal.Views.AIChatbotPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="using:SpacePortal.Models" 
    xmlns:triggers="using:CommunityToolkit.WinUI" 
    xmlns:local1="using:SpacePortal.Helpers" 
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="Card" TargetType="Grid">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="CornerRadius" Value="15"/>
        </Style>
    </Page.Resources>

    <Grid Padding="36" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <DataTemplate x:Key="UserMessageTemplate">
                <Grid HorizontalAlignment="Right" Style="{StaticResource Card}" Margin="0,20,0,20">
                    <TextBlock Text="{Binding Message}" TextWrapping="Wrap" HorizontalAlignment="Right" LineHeight="28" FontSize="15"/>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="BotMessageTemplate">
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="{Binding Message}" TextWrapping="Wrap" HorizontalAlignment="Left" LineHeight="28" FontSize="15"/>
                </StackPanel>
            </DataTemplate>
            <local1:ChatMessageTemplateSelector x:Key="ChatMessageTemplateSelector"
                                   UserMessageTemplate="{StaticResource UserMessageTemplate}"
                                   BotMessageTemplate="{StaticResource BotMessageTemplate}"/>
        </Grid.Resources>

        <ListView Name="ChatMessagesListView" 
              Grid.Row="0" 
              Width="630"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              ItemsSource="{x:Bind ViewModel.ChatMessages}"
              ItemTemplateSelector="{StaticResource ChatMessageTemplateSelector}">
        </ListView>

        <Grid Grid.Row="1" HorizontalAlignment="Center" MaxHeight="200">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Name="InputPrompt" PlaceholderText="" Width="600" TextWrapping="Wrap"/>
            <Button Grid.Column="1" Name="SendButton" Click="SendButton_Click" CornerRadius="15" Margin="8,0,0,0">
                <FontIcon Glyph="&#xE74A;" />
            </Button>
        </Grid>
    </Grid>
</Page>