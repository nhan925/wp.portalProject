<Page 
    x:Class="SpacePortal.Views.InformationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="Title" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
        </Style>

        <Style x:Key="Subtitle" TargetType="TextBlock" BasedOn="{StaticResource BodyStrongTextBlockStyle}" >
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <Style x:Key="Content" TargetType="TextBlock" BasedOn="{StaticResource BodyStrongTextBlockStyle}" >
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
        </Style>


        <Style x:Key="Card" TargetType="Grid">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <Style x:Key="ResetButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
           
        </Style>
    </Page.Resources>
    
        
    <ScrollView>
        <Grid x:ConnectionId='2' x:Name="ContentArea" Margin="36, 36, 36, 36" RowSpacing="36" ColumnSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Grid x:ConnectionId='3' x:Name="GeneralFrame" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" RowSpacing="36">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock x:ConnectionId='11' Name="GeneralTitle" Style="{ThemeResource Title}" x:Uid="Information_General" Grid.Row="0"/>

                <Grid x:ConnectionId='12' x:Name="GeneralInformation" Style="{ThemeResource Card}" Grid.Row="1" Height="200" Width="auto" Padding="0,40,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"  />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2.5*" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>

                    <Border Width="108" Height="108" CornerRadius="108" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3">
                        <Image Source="ms-appx:///Assets/defaultAvt.png" Stretch="UniformToFill"/>
                    </Border>

                    <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                        <TextBlock x:Uid="Information_Fullname" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="Nguyễn Minh Nguyên" Style="{ThemeResource Content}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" >
                        <TextBlock x:Uid="Information_Major" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="Công nghệ thông tin" Style="{ThemeResource Content}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
                        <TextBlock x:Uid="Information_EducationSystem" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="Đại trà" Style="{ThemeResource Content}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal">
                        <TextBlock x:Uid="Information_StudentID" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="22120238" Style="{ThemeResource Content}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal">
                        <TextBlock x:Uid="Information_Course" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="2022" Style="{ThemeResource Content}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal">
                        <TextBlock x:Uid="Information_Gender" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="Nam" Style="{ThemeResource Content}"/>
                    </StackPanel>
                </Grid>
            </Grid>


            <Grid x:ConnectionId='4' x:Name="DetailFrame" Grid.Column="0" Grid.Row="1" RowSpacing="36">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock x:ConnectionId='9' Name="DetialTitle" Style="{ThemeResource Title}" x:Uid="Information_Details" Grid.Row="0"/>

                <Grid x:ConnectionId='10' x:Name="DetailInformation" Style="{ThemeResource Card}" Grid.Row="1" Height="250" Width="auto" Padding="40,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>


                    <StackPanel Grid.Row="0" Orientation="Horizontal" >
                        <TextBlock x:Uid="Information_DateOfBirth" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="01/01/2004" Style="{ThemeResource Content}"/>
                    </StackPanel>


                    <StackPanel Grid.Row="1" Orientation="Horizontal" >
                        <TextBlock x:Uid="Information_Nationality" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="Việt Nam" Style="{ThemeResource Content}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock x:Uid="Information_Ethnicity" Style="{ThemeResource Subtitle}" />
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="Kinh" Style="{ThemeResource Content}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <TextBlock x:Uid="Information_Identification" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="082204000123" Style="{ThemeResource Content}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="0" Grid.Row="4" Orientation="Horizontal">
                        <TextBlock x:Uid="Information_StudentEmail" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="22120238@student.hcmus.edu.vn" Style="{ThemeResource Content}"/>
                    </StackPanel>
                </Grid>
            </Grid>


            <Grid x:ConnectionId='5' x:Name="ContactFrame" Grid.Column="1" Grid.Row="1" RowSpacing="36">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock x:ConnectionId='6' Name="ContactTitle" Style="{ThemeResource Title}" x:Uid="Information_Contact" Grid.Row="0"/>

                <Grid x:ConnectionId='7' x:Name="ContactInformation" Style="{ThemeResource Card}" Grid.Row="1" Height="250" Width="auto" Padding="40,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>


                    <Button x:ConnectionId='8' x:Name="SettingBtn" Grid.Row="0" Grid.Column="1" Style="{StaticResource ResetButton}" Width="28" Height="28" Margin="0,0,10,0">
                        <Image Source="../Assets/edit_square.png" Stretch="Uniform" />
                    </Button>
                    
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" >
                        <TextBlock x:Uid="Information_PersonalEmail" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="nguyenptn1104@gmail.com" Style="{ThemeResource Content}"/>
                    </StackPanel>


                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" >
                        <TextBlock x:Uid="Information_PhoneNumber" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="0376566169" Style="{ThemeResource Content}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                        <TextBlock x:Uid="Information_Address" Style="{ThemeResource Subtitle}"/>
                        <TextBlock x:Uid="Information_Separate" Style="{ThemeResource Subtitle}" Margin="0,0,10,0"/>
                        <TextBlock Text="KTX Khu B ĐHQG TPHCM" Style="{ThemeResource Content}" />

                    </StackPanel>
                </Grid>
            </Grid>






        </Grid>
    </ScrollView>
</Page>

