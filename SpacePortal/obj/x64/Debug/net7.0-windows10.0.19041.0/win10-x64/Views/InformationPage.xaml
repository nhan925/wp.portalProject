<Page
    x:Class="SpacePortal.Views.InformationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollView>
        <Grid x:ConnectionId='2' x:Name="ContentArea" Margin="0,0,0,36">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Spacing="36" Margin="36,36,36,36">
                <TextBlock x:ConnectionId='5' Name="Title01" Style="{ThemeResource TitleTextBlockStyle}" x:Uid="Information_General" />

                <StackPanel Orientation="Horizontal" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Height="300" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="10">
                    <Border Width="216" Height="216" CornerRadius="108" HorizontalAlignment="Center" Margin="55,10,80,0">
                        <Image Source="ms-appx:///Assets/defaultAvt.png" Stretch="UniformToFill"/>
                    </Border>

                    <StackPanel Margin="0,0,200,0" Orientation="Vertical" VerticalAlignment="Center" Spacing="24">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_Fullname" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="Nguyễn Minh Nguyên" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_Major" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="Công nghệ thông tin" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_EducationSystem" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="Đại trà" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="10,0,0,0" Orientation="Vertical" VerticalAlignment="Center" Spacing="24">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_StudentID" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="22120238" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_Course" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="2022" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_Gender" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="Nam" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Margin="36,0,8,0" Spacing="36">
                <TextBlock x:ConnectionId='4' Name="Title02" Style="{ThemeResource TitleTextBlockStyle}" Text="Chi tiết" />

                <StackPanel Orientation="Horizontal"   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Height="300" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="10">
                    <StackPanel Spacing="24" Margin="55,35,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_DateOfBirth" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="01/01/2004" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_Nationality" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="Việt Nam" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_Ethnicity" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="Kinh" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_Identification" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="082204000123" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_StudentEmail" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="22120238@student.hcmus.edu.vn" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,36,0" Spacing="36">
                <TextBlock x:ConnectionId='3' Name="Title03" Style="{ThemeResource TitleTextBlockStyle}" x:Uid="Information_Contact" />

                <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Height="300" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Spacing="24" Margin="55,35,0,0" Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_PersonalEmail" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="nguyenptn1104@gmail.com" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_PhoneNumber" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="0376566169" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Information_Address" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock x:Uid="Information_Separate" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="KTX Khu B - ĐHQG, Thủ Đức, TPHCM" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>


                    <Button Style="{ThemeResource AccentButtonStyle}" Width="120" Height="40" Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,10,10">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE713;" FontSize="15" />
                            <TextBlock x:Uid="Information_CustomContact" Margin="10,0,0,0" FontSize="15"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </ScrollView>
</Page>

